        <TextBlock x:Name="HueTextBlue" HorizontalAlignment="Left" Margin="942,359,-3,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="358" FontFamily="Yu Gothic UI"/>
        <TextBlock x:Name="HueText" HorizontalAlignment="Left" Margin="942,221,-3,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="358" FontFamily="Yu Gothic UI"/>
        <TextBlock x:Name="HueTextYsig" HorizontalAlignment="Left" Margin="689,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="172" Width="337" FontFamily="Yu Gothic UI"/>

