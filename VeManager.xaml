        <Label Content="設定保存ファイル名" HorizontalAlignment="Left" Margin="759,523,0,0" VerticalAlignment="Top" Width="178" FontFamily="Yu Gothic UI"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="757,548,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" x:Name="WriteFileName" FontFamily="Yu Gothic UI"/>
        <Label Content="読み出しファイル名" HorizontalAlignment="Left" Margin="955,523,0,0" VerticalAlignment="Top" Width="180" FontFamily="Yu Gothic UI"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="955,548,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" x:Name="ReadFileName" FontFamily="Yu Gothic UI" />
        <Image x:Name="FaceImage" HorizontalAlignment="Left" Height="159" Margin="996,68,0,0" VerticalAlignment="Top" Width="271"/>
        <TextBox HorizontalAlignment="Left" Height="37" Margin="22,531,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" x:Name="BlueMemo" FontFamily="Yu Gothic UI" Background="#4C09A2BE" BorderThickness="3" BorderBrush="#FF06C5E5" FontSize="22" Text="彩度, 色相(0-360)"/>
