<Window x:Class="test_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080px" Width="1920px">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ShowButton" Content="Show Image" HorizontalAlignment="Left" Margin="116,844,0,0" VerticalAlignment="Top" Width="254" Height="76" Click="show_image"/>
        <Image x:Name="MainImage" Source="{Binding rp_image.Value}" HorizontalAlignment="Left" Height="657" Margin="116,94,0,0" VerticalAlignment="Top" Width="1139" Grid.ColumnSpan="2" />
        <ListView x:Name="listView" Grid.Column="1" HorizontalAlignment="Left" Height="222" Margin="759,698,0,0" VerticalAlignment="Top" Width="438" ItemsSource="{Binding Mode=OneWay}" SelectionChanged="listView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding [0]}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding [1]}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="DeleteButton" Content="Delete Image" HorizontalAlignment="Left" Margin="403,844,0,0" VerticalAlignment="Top" Width="254" Height="76" Click="delete_image" Grid.ColumnSpan="2"/>
        <Button x:Name="GrayButton" Content="Gray Image" HorizontalAlignment="Left" Margin="153,844,0,0" VerticalAlignment="Top" Width="256" Height="76" Click="grayscale_image" Grid.Column="1"/>
        <Button x:Name="HueButton" Content="Hue Analysis" HorizontalAlignment="Left" Margin="446,844,0,0" VerticalAlignment="Top" Width="255" Height="76" Click="hue_image" Grid.Column="1"/>
        <TextBlock x:Name="HueTextRed" Grid.Column="1" HorizontalAlignment="Left" Margin="759,456,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" Width="438"/>
        <TextBlock x:Name="HueTextBlue" Grid.Column="1" HorizontalAlignment="Left" Margin="759,576,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="98" Width="438"/>
        <TextBlock x:Name="HueText" Grid.Column="1" HorizontalAlignment="Left" Margin="759,383,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="438"/>
        <Image x:Name="BaseImage" Grid.Column="1" HorizontalAlignment="Left" Height="248" Margin="759,94,0,0" VerticalAlignment="Top" Width="438"/>
        <TextBlock x:Name="HueTextBase" Grid.Column="1" HorizontalAlignment="Left" Margin="795,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="370" Text="キャプチャーした基準画像" FontSize="36"/>
        <TextBlock x:Name="HueTextBase_Copy" Grid.Column="1" HorizontalAlignment="Left" Margin="0,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="370" FontSize="36" Text="現在の画像"/>

    </Grid>
</Window>
